{
  "name": "Copy text",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Get text from pages into api",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
      "tabs",
      "<all_urls>",
      "http://*/*",
      "https://*/*/index.php/text",
      "http://api.lang-master.lh/index.php/text"
  ],
  "background":
  {
    "scripts": [
      "components/jquery/dist/jquery.js",
      "popup.js"
    ]
  }
}